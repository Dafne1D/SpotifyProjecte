<Page x:Class="AppSpotifyWPF.Screens.Users.UpdateUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit User" Height="800" Width="1000"
      Background="#F5F6FA">

    <Grid x:Name="HomeContent">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <Button
                    Margin="0 0 0 5"
                    Background="Transparent"
                    Foreground="Gray"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Click="returnButton_Click"
                    HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE76B;"
                                   FontSize="16"
                                   Margin="0 0 10 0"/>
                        <TextBlock Text="Back to Users"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <TextBlock x:Name="txtTitle"
                FontSize="28"
                FontWeight="Bold"
                Foreground="Black"
                Margin="0,0,0,20"/>


                <Border Background="White"
                        CornerRadius="20"
                        Padding="30">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Nom:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblName" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtName"
                                     FontSize="18"
                                     Margin="0,5,80,20"
                                     Height="35"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Role:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblRole" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtRole"
                                     FontSize="18"
                                     Margin="0,5,80,0"
                                     Height="35"/>

                        </StackPanel>

                        <StackPanel Grid.Column="1">

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Correu:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblEmail" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtEmail"
                                     FontSize="18"
                                     Margin="0,5,60,20"
                                     Height="35"/>

                        </StackPanel>

                    </Grid>
                </Border>

                <Grid Margin="0,30,0,0" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="saveUserButton"
                            Grid.Column="0"
                            Margin="0"
                            Padding="12 8"
                            Background="#4CAF50"
                            Foreground="Black"
                            BorderBrush="#388E3C"
                            BorderThickness="1"
                            Click="saveUserButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE74E;"
                                       FontSize="18"
                                       Margin="0 0 8 0"/>
                            <TextBlock Text="Guardar"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Button>


                    <Button x:Name="deleteUserButton"
                            Grid.Column="4"
                            Margin="0"
                            Padding="12 8"
                            Background="Red"
                            Foreground="Black"
                            BorderBrush="DarkRed"
                            BorderThickness="1"
                            Click="deleteUserButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE74D;"
                                       FontSize="18"
                                       Margin="0 0 8 0"/>
                            <TextBlock Text="Delete User"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Button>

                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
