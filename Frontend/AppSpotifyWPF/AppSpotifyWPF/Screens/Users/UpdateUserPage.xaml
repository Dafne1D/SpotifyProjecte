<Page x:Class="AppSpotifyWPF.Screens.Users.UpdateUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit User" Height="800" Width="1000"
      Background="#F5F6FA">

    <Grid x:Name="HomeContent">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40">

                <Button
                    Margin="0 0 0 5"
                    Background="Transparent"
                    Foreground="Gray"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    Click="returnButton_Click"
                    HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE76B;"
                                   FontSize="16"
                                   Margin="0 0 10 0"/>
                        <TextBlock Text="Back to Users"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <TextBlock x:Name="txtTitle"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="0,0,0,20"/>

                <Border Background="White"
                        CornerRadius="20"
                        Padding="30">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT COLUMN -->
                        <StackPanel Grid.Column="0">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Nom:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblName" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtName"
                                     FontSize="18"
                                     Margin="0,5,80,20"
                                     Height="35"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Password:" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>

                            <PasswordBox x:Name="txtPassword"
                                         FontSize="18"
                                         Margin="0,5,80,20"
                                         Height="35"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Repeat Password:" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>

                            <PasswordBox x:Name="txtRepeatPassword"
                                         FontSize="18"
                                         Margin="0,5,80,20"
                                         Height="35"/>

                            <!-- BUTTONS NOW BELOW REPEAT PASSWORD -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Left"
                                        Margin="0,10,0,0">

                                <Button x:Name="saveUserButton"
                                        Width="120"
                                        Margin="0 0 10 0"
                                        Padding="12 8"
                                        Background="#4CAF50"
                                        Foreground="Black"
                                        BorderBrush="#388E3C"
                                        BorderThickness="1"
                                        Click="saveUserButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74E;"
                                                   FontSize="18"
                                                   Margin="0 0 8 0"/>
                                        <TextBlock Text="Guardar"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="deleteUserButton"
                                        Width="120"
                                        Padding="12 8"
                                        Background="Red"
                                        Foreground="Black"
                                        BorderBrush="DarkRed"
                                        BorderThickness="1"
                                        Click="deleteUserButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="18"
                                                   Margin="0 0 8 0"/>
                                        <TextBlock Text="Delete User"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                        </StackPanel>

                        <!-- RIGHT COLUMN -->
                        <StackPanel Grid.Column="1">

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Correu:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblEmail" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtEmail"
                                     FontSize="18"
                                     Margin="0,5,60,20"
                                     Height="35"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Role:" FontSize="18" FontWeight="Bold"/>
                                <TextBlock x:Name="lblRole" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <TextBox x:Name="txtRole"
                                     FontSize="18"
                                     Margin="0,5,60,20"
                                     Height="35"/>

                        </StackPanel>

                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
