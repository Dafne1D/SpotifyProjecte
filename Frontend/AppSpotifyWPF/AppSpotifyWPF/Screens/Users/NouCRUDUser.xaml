<Page x:Class="AppSpotifyWPF.Screens.Users.NouCRUDUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <Border Background="#E0E0E0"
                        CornerRadius="15"
                        Padding="20"
                        Width="800"
                        HorizontalAlignment="Left">

                    <StackPanel>
                        <TextBlock Text="USUARI"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <Border Background="#A0A0A0"
                                CornerRadius="20"
                                Padding="30">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">

                                    <TextBlock Text="Nom:" FontSize="18" FontWeight="Bold"/>
                                    <TextBox x:Name="txtName"
                                             FontSize="18"
                                             Margin="0,5,80,20"
                                             Height="35"/>

                                    <TextBlock Text="Role:" FontSize="18" FontWeight="Bold"/>
                                    <TextBox x:Name="txtRole"
                                             FontSize="18"
                                             Margin="0,5,80,0"
                                             Height="35"/>
                                              
                                </StackPanel>

                                <StackPanel Grid.Column="1">

                                    <TextBlock Text="Correu:" FontSize="18" FontWeight="Bold"/>
                                    <TextBox x:Name="txtEmail"
                                             FontSize="18"
                                             Margin="0,5,60,20"
                                             Height="35"/>

                                </StackPanel>

                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,30,0,0"
                        HorizontalAlignment="Left">

                <Button Content="Editar"
                        Width="120"
                        Height="45"
                        Background="#E0E0E0"
                        FontSize="18"
                        Margin="0,0,40,0"/>

                <Button Content="Eliminar"
                        Width="120"
                        Height="45"
                        Background="#E0E0E0"
                        FontSize="18"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>