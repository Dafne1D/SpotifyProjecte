<Page x:Class="AppSpotifyWPF.Screens.Users.UserManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppSpotifyWPF.Screens.Users"
      mc:Ignorable="d" 
      Height="800" Width="1000"
      Title="User Management"
      Background="#F5F6FA">

    <Grid>

        <!-- ====== MAIN GRID ====== -->
        <Grid x:Name="MainGrid">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">
                    <!-- Main Title -->
                    <TextBlock Text="User Management"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>

                    <!-- MAIN -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                        <StackPanel>
                            <!-- Search bar -->
                            <DockPanel Margin="0,0,0,30">
                                <TextBox x:Name="txtSearch" Width="400" Height="35"
                                Text=""
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"/>
                            </DockPanel>

                            <!-- Load users -->
                            <Button Content="Load"
                            Background="#4CAF50"
                            Foreground="White"
                            Width="150"
                            Height="35"
                            Click="LoadUsers_Click"
                            Margin="0,0,0,20"/>

                            <!-- Users grid -->
                            <WrapPanel x:Name="UsersWrap"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,20"/>

                            <Button Content="Back to Home"
                            Click="BackToHome_Click"
                            Background="White"
                            BorderBrush="Gray"
                            Width="150"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
