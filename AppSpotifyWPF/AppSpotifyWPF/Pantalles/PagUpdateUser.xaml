<Page x:Class="AppSpotifyWPF.Pantalles.PagUpdateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PagUpdateUser">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F6FA">
        <StackPanel Margin="40">

            <TextBlock Text="Users Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,30"/>

            <!-- Search -->
            <DockPanel Margin="0,0,0,30">
                <TextBox Width="400" Height="35" Text="Search users..." VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                <Button Content="🔍 Search" Background="Black" Foreground="White" Width="100" Height="35" Margin="10,0,0,0"/>
            </DockPanel>

            <TextBlock Text="Update Name" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="New user name" Margin="0,0,0,20" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

            <TextBlock Text="Update Gmail" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="User Gmail" Margin="0,0,0,20" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>

            <TextBlock Text="New Password" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox Margin="0,0,0,20" Height="35"/>

            <TextBlock Text="Repeat password" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox Margin="0,0,0,30" Height="35"/>

            <Button Content="UPDATE" Background="#4CAF50" Foreground="White" Height="35" Margin="0,0,0,20"/>

            <Button Content="Back to Home" Click="BackToHome_Click" Background="White" BorderBrush="Gray" Width="150"/>
        </StackPanel>
    </ScrollViewer>
</Page>
