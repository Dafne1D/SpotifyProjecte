<Page x:Class="AppSpotifyWPF.Pantalles.PagReadUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PagReadUser">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F6FA">
        <StackPanel Margin="40">

            <TextBlock Text="User Searcher" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Search bar -->
            <DockPanel Margin="0,0,0,30">
                <TextBox Width="400" Height="35" Text="Search user..." HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                <Button Content="🔍 Search" Background="Black" Foreground="White" Width="100" Height="35" Margin="10,0,0,0"/>
            </DockPanel>

            <!-- Users grid -->
            <WrapPanel x:Name="UsersWrap" HorizontalAlignment="Left">
                <StackPanel Margin="10">
                    <Ellipse Width="80" Height="80" Fill="LightGray"/>
                    <TextBlock Text="user1" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <Ellipse Width="80" Height="80" Fill="LightGray"/>
                    <TextBlock Text="user2" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </WrapPanel>

            <Button Content="Back to Home" Click="BackToHome_Click" Background="White" BorderBrush="Gray" Width="150" Margin="0,30,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
