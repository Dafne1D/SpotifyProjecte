<Page x:Class="AppSpotifyWPF.Screens.Songs.PagDeleteSong"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PagDeleteUser">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F6FA">
        <StackPanel Margin="40">

            <TextBlock Text="Songs Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Search -->
            <DockPanel Margin="0,0,0,30">
                <TextBox Width="400" Height="35" Text="" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                <Button Content="🔍 Search" Background="Black" Foreground="White" Width="100" Height="35" Margin="10,0,0,0"/>
            </DockPanel>

            <!-- Users grid -->


            <Button Content="DELETE" Background="#E53935" Foreground="White" Height="35" Margin="0,30,0,20"/>

            <Button Content="Back to Home" Click="BackToHome_Click" Background="White" BorderBrush="Gray" Width="150"/>
        </StackPanel>
    </ScrollViewer>
</Page>
