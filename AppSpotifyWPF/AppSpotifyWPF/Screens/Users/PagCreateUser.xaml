<Page x:Class="AppSpotifyWPF.Screens.Users.PagCreateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PagCreateUser">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F6FA">
        <StackPanel Margin="40">
            <TextBlock Text="Users Management" FontSize="22" FontWeight="Bold" Margin="0,0,0,30"/>

            <TextBlock Text="Name" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name ="txtName" Margin="0,0,0,20" Height="35"/>

            <TextBlock Text="Gmail" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,20" Height="35"/>

            <TextBlock Text="Password" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"  Height="35"/>

            <TextBlock Text="Repeat password" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtRepeatPassword" Margin="0,0,0,30" Height="35"/>

            <Button Content="CREATE" Click="CreateUser_Click" Background="#4CAF50" Foreground="White" Height="35" Margin="0,0,0,20"/>

            <Button Content="Back to Home" Click="BackToHome_Click" Background="White" BorderBrush="Gray" Width="150"/>
        </StackPanel>
    </ScrollViewer>
</Page>
